# Generated by Zentyal

uris = ldapi://%2fvar%2frun%2fslapd%2fldapi

dn = "<% $zentyalRO %>"

dnpass = "<% $zentyalROPwd %>"

sasl_bind = no

tls = no

ldap_version = 3

deref = never

scope = base

base = uid=%n,<% $usersDn %>

user_attrs = mailquota=quota_rule=*:storage=%$M, quota_rule2=Trash:storage=+110%%

user_filter = (&(objectClass=CourierMailAccount)(mail=%n@%d))
