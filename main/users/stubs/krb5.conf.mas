<%args>
    $realm
    $hostname
    $hostdomain
</%args>
[libdefaults]
	default_realm = <% $realm %>

[realms]
	<% $realm %> = {
		kdc = <% $hostname %>.<% $hostdomain %>
		admin_server = <% $hostname %>.<% $hostdomain %>
        passwd_server = <% $hostname %>.<% $hostdomain %>
	}

[domain_realm]
	.<% $hostdomain %> = <% $realm %>
    <% $hostdomain %> = <% $realm %>
