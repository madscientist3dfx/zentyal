use strict;
use warnings;

print "Rewriting latest CA link\n";

my $link = '/var/lib/zentyal/CA/crl/latest.pem';
if (-l $link) {
    my $dest = readlink($link);
    $dest =~ s/ebox/zentyal/;

    unlink ($link);
    symlink ($dest, $link);

}

print "DONE\n";

1;
